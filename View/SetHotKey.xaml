<Window x:Class="OutfitTool.SetHotKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutfitTool"
        mc:Ignorable="d"
        Title="SetHotKey" Height="112" Width="260" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"  KeyUp="Window_KeyUp">
    <Grid Background="LightGray" MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="CommandDescription" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Bottom" />
        <Label Grid.Row="1" Content="{DynamicResource PressAnyKeyOrEscapeForCancel}" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
